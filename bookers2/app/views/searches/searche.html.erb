
  <table class="table">
    <% if @range == "User" %>
    <h2>User search for "<%= @word %>"</h2>
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% else %>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% end  %>


    <tbody>
    <% if @range == "User" %>
      <tr>
        <% @users.each do |user| %>
         <td>
            <%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
         </td>

         <td><%= user.name %></td>
         <td></td>
      </tr>
        <% end %>
    <% else %>
      <% @books.each do |book| %>
      <tr>
          <td>
            <%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          </td>

          <td><%= book.title %></td>
          <td><%= book.body %></td>

      </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>