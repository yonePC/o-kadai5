
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    <% if @range == "User" %>
        <tr>
        <% @users.each do |user| %>
         <td>
            <%= attachment_image_tag(@book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
         </td>
         <td><%= user.name %></td>
        <% end %>
    <% else %>
        <% @books.each do |book| %>
          <td>
            <%= attachment_image_tag(@book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          </td>
          <td><%= book.title %></td>
          </td><%= book.text %></td>
        <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>